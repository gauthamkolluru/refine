{
  "manifest_version": 3,
  "name": "Diplomat Comments",
  "description": "Reframe aggressive YouTube comments into constructive feedback.",
  "version": "1.0.0",
  "action": {
    "default_title": "Diplomat Comments"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content-script.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
